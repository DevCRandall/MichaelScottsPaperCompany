@model MichaelScottsPaperCompany.DATA.EF.Models.Item

@{
    ViewData["Title"] = "Item Details";
}

<h1 class="p-3">Item Details</h1>

<div class="p-3">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemsInStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemsInStock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InStock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastOrderedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastOrderedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.ManufacturerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemImage)
        </dt>
        <dd class="col-sm-10">
            <img src="~/assets/img/upload/t_@Model.ItemImage" alt="@Model.ItemDescription" />
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model?.ItemId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</div>
