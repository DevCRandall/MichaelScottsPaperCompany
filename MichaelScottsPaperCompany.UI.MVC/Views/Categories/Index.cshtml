@model IEnumerable<MichaelScottsPaperCompany.DATA.EF.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1 class="p-4">Categories</h1>
<div class="m-3">

    <div class="d-flex align-items-end flex-column px-3">
        <p>
            <a asp-action="Create" class="btn btn-primary">Add +</a>
        </p>
    </div>
    <table class="table table-bordered p-3">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.CategoryDescription)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a
                        asp-action="Details" asp-route-id="@item.CategoryId" class="option1">
                        @Html.DisplayFor(modelItem => item.CategoryName)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryDescription)
                    </td>
                    <td class="col col-2 text-center">
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm mt-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
